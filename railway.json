{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm install && pnpm exec prisma migrate deploy --schema=src/prisma/schema.prisma && pnpm run build"
  },
  "deploy": {
    "startCommand": "pnpm run start:prod:migrate",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "sleepApplication": false,
    "restartPolicyType": "always"
  }
}
