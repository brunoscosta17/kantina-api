{
  "name": "kantina-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "postbuild": "prisma generate --schema=src/prisma/schema.prisma",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod:migrate": "pnpm exec prisma migrate deploy --schema=src/prisma/schema.prisma && node dist/main",
    "lint": "eslint . --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json --runInBand",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:seed": "tsx src/prisma/seed.ts",
    "prisma:seed:demo": "tsx src/prisma/seed.demo.ts",
    "dev:docker:up": "docker compose --profile local-db up -d --build",
    "dev:docker:down": "docker compose down -v",
    "db:migrate": "docker compose exec api pnpm prisma migrate dev --name init",
    "db:migrate:dev": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "db:status": "prisma migrate status --schema=src/prisma/schema.prisma",
    "db:reset": "docker compose exec api pnpm prisma migrate reset --force",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:seed:demo": "tsx src/prisma/seed.demo.ts",
    "seed:local": "tsx src/prisma/seed.ts",
    "vercel-build": "prisma generate --schema=src/prisma/schema.prisma && nest build",
    "migrate:env": "pnpm dlx dotenv-cli -e .env -- prisma migrate dev --name add-responsavel-aluno-relation --schema=src/prisma/schema.prisma",

    "db:migrate:railway": "dotenv -e .env.railway.local -- prisma migrate deploy --schema=src/prisma/schema.prisma",
    "db:seed:railway:demo": "dotenv -e .env.railway.local -- tsx src/prisma/seed.demo.ts",
    "deploy:prod": "pnpm lint && pnpm test && git push origin main"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.17.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "ms": "^2.1.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vercel/node": "^5.4.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
